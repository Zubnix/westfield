{
  "name": "westfield-runtime-client",
  "version": "0.1.5",
  "description": "Wayland HTML5 core client protocol",
  "main": "index.js",
  "scripts": {
    "prepare:generate:webshm": "westfield-scanner-client ../../protocol/web-shm.xml -o src/protocol",
    "prepare:generate:xdgshell": "westfield-scanner-client ../../protocol/xdg-shell.xml -o src/protocol",
    "prepare:generate:wayland": "westfield-scanner-client ../../protocol/wayland.xml -o src/protocol",
    "prepare:generate": "mkdir -p src/protocol/ && npm run prepare:generate:wayland && npm run prepare:generate:xdgshell && npm run prepare:generate:webshm",
    "prepare": "npm run prepare:generate && webpack --config build.config/webpack.config.prod.js",
    "prepare:dev": "npm run prepare:generate && webpack --config build.config/webpack.config.dev.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/udevbe/westfield.git"
  },
  "keywords": [
    "wayland",
    "client",
    "html5",
    "compositor",
    "browser",
    "javascript"
  ],
  "author": "Erik De Rijcke",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/udevbe/westfield/issues"
  },
  "homepage": "https://github.com/udevbe/westfield#readme",
  "dependencies": {
    "westfield-runtime-common": "../../common"
  },
  "devDependencies": {
    "westfield-scanner-client": "../generator",
    "standard": "^10.0.2",
    "clean-webpack-plugin": "^0.1.19",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.5"
  }
}
